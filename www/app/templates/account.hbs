{{outlet 'error' }}
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-4 stats">
        <div style="display: block;">
          <i class="fa fa-cloud"></i> {{t 'account.imBalance'}} <span>{{format-balance model.stats.immature}}</span><br>
          <small>{{t 'account.imBalanceDesc'}} </small>
        </div>
        <div style="display: block;">
          <i class="fa fa-bank"></i> {{t 'account.pending'}}<span>{{format-balance model.stats.balance}}</span><br>
          <small>{{t 'account.pendingDesc'}}</small>
        </div>
        {{#if model.stats.pending}}
        <div style="display: block;">
          <i class="fa fa-clock-o"></i>{{t 'account.cur'}} <span>{{format-balance model.stats.pending}}</span><br>
        </div>
        {{/if}}
        <div style="display: block;"><i class="fa fa-money"></i>{{t 'account.total'}}<span>{{format-balance model.stats.paid}}</span></div>
      </div>
      <div class="col-md-4 stats">
        {{#if model.stats.lastShare}}
        <div style="display: block;"><i class="fa fa-clock-o"></i>{{t 'account.lastShare'}}<span>{{format-relative (seconds-to-ms (string-to-int model.stats.lastShare))}}</span>
        </div>
        {{/if}}
        <div style="display: block;"><i class="fa fa-gears"></i>{{t 'account.workersOnline'}}<span>{{format-number model.workersOnline}}</span></div>
        <div style="display: block;"><i class="fa fa-tachometer"></i>{{t 'account.hashrate30m'}}<span>{{format-hashrate model.currentHashrate}}</span></div>
        <div style="display: block;"><i class="fa fa-tachometer"></i>{{t 'account.hashrate3h'}}<span>{{format-hashrate model.hashrate}}</span></div>
      </div>
      <div class="col-md-4 stats">
        <div style="display: block;"><i class="fa fa-tachometer"></i>{{t 'account.found'}}<span>{{format-number model.stats.blocksFound fallback='0'}}</span></div>
        <div style="display: block;"><i class="fa fa-paper-plane-o"></i>{{t 'account.totalPyaments'}}<span>{{format-number model.paymentsTotal}}</span></div>
        <div style="display: block;">
          <i class="fa fa-gears"></i>{{t 'account.round'}}<span>{{format-number roundPercent style='percent' maximumFractionDigits='6'}}</span><br/>
          <small>{{t 'account.roundDesc'}}</small>
        </div>
        <div style="display: block;">
          <i class="fa fa-clock-o"></i>
          {{t 'account.epoch'}} <span>{{format-relative applicationController.nextEpoch units="hour"}}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <ul class="nav nav-tabs">
    {{#active-li currentWhen='account.index' role='presentation'}}
      {{#link-to 'account.index'}}{{t 'account.workers'}}  <span class="badge alert-danger">{{model.workersOffline}}</span>{{/link-to}}
    {{/active-li}}
    {{#active-li currentWhen='account.payouts' role='presentation'}}
      {{#link-to 'account.payouts'}}{{t 'account.payouts'}} {{/link-to}}
    {{/active-li}}
  </ul>
</div>

{{outlet}}
