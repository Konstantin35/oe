<!-- Fixed navbar -->
{{#unless minimalUI }}
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand"><img src="/logo.png" alt="" style="width: 29px;height:26px;" /></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        {{#active-li currentWhen='index'}}
          {{#link-to 'index'}}
             {{t 'app.home'}}
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='blocks'}}
          {{#link-to 'blocks'}}
             {{t 'app.blocks'}}
            {{#if immatureTotal}}
              <span class="badge alert-success">{{immatureTotal}}</span>
            {{/if}}
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='payments'}}
          {{#link-to 'payments'}}
            {{t 'app.payments'}}
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='miners'}}
          {{#link-to 'miners'}}
             {{t 'app.miners'}}
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='channel'}}
          {{#link-to 'channel'}}
             {{t 'channel.group'}}
          {{/link-to}}
        {{/active-li}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="http://www.minerbabe.com">{{t 'app.minerBabe'}}</a></li>
      </ul>
    </div>
  </div>
</div>
{{/unless}}
{{outlet}}
