<div class="jumbotron">
  <div class="container">
    <p class="lead">{{t 'miner.totalHashrate'}}{{format-hashrate model.hashrate}}</p>
    <strong>{{t 'miner.totalMiner'}}</strong> <span class="label label-info">{{model.minersTotal}}</span>
  </div>
</div>
<div class="container">
  {{#if model.miners}}
  <h4>{{t 'miner.miners'}}</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>{{t 'miner.col1'}}</th>
          <th>{{t 'miner.col2'}}</th>
          <th>{{t 'miner.col3'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.miners as |m|}}
        <tr class="{{if m.offline "warning"}}">
          <td>{{#link-to 'account' m.login class='hash'}}{{m.login}}{{/link-to}}</td>
          <td>{{format-hashrate m.hr}}</td>
          <td>{{format-date-locale m.lastBeat}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>{{t 'miner.noMiner'}}</h3>
  {{/if}}
</div>
